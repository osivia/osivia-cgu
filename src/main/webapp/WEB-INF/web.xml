<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:web="http://java.sun.com/xml/ns/javaee" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         id="WebApp_ID" version="2.5">
  <display-name>Cartoun - Cr√©ation Compte</display-name>
 
 <!-- Servlet de rendu -->
	<servlet>
		<servlet-name>ViewRendererServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.ViewRendererServlet</servlet-class>
	</servlet>

	<!-- Mapping du rendu -->
	<servlet-mapping>
		<servlet-name>ViewRendererServlet</servlet-name>
		<url-pattern>/WEB-INF/servlet/view</url-pattern>
	</servlet-mapping>
	
	<!-- Taglibs -->
    <jsp-config>
        <taglib>
            <taglib-uri>osivia-portal</taglib-uri>
            <taglib-location>theme/osivia-portal.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>internationalization</taglib-uri>
            <taglib-location>theme/internationalization.tld</taglib-location>
        </taglib>
	    <taglib>
	        <taglib-uri>http://displaytag.sourceforge.net/</taglib-uri>
	        <taglib-location>theme/displaytag-el.tld</taglib-location>
	    </taglib>
        
    </jsp-config>
    
</web-app>
